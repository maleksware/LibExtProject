<MyBooks>
    bookLayout: bookLayout
    name: "MyBooks"
    on_enter:
        root.stack()
        root.my_book(self)
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        GridLayout:
            cols: 2
            MDLabel:
                text: 'My Books'
                size_hint: (0.1, None)
                font_size: 30
                halign:'center'
    GridLayout:
        cols: 1
        Widget:
            size_hint: 1, 0.2
