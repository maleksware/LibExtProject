<Profile>
    nameLabel: nameLabel
    surnameLabel: surnameLabel
    rank: rank
    on_enter:
        root.stack()
        root.initProfile()
    name: "Profile"
    AnchorLayout:
        anchor_x:'left'
        anchor_y:'top'
        Button:
            size_hint:None,None
            font_size:30
            background_normal:'back.png'
            on_press: root.back()
    GridLayout:

        cols: 1
        MDLabel:
            text: "Profile"
            font_size: 35
            size_hint: 0.2, None
            halign:'center'
        GridLayout:
            size_hint: 0.1, None
            cols: 2
            rows: 1
            padding: 30
            Image:
                id: rank
                source: "profile.png"
                allow_stretch: True
                size_hint: 0.6, None

            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    id: nameLabel
                    font_size: 20
                    halign: "center"
                MDLabel:
                    id: surnameLabel
                    font_size: 20
                    halign: "center"
        Widget:
            size_hint: 0.1, None



        Button:
            size_hint: 0.4, None
            background_color: [255, 255, 255, 0]
            color: [0, 0, 0, 1]
            text: "Edit profile"
            on_press: root.editProfile()
        Button:
            size_hint: 0.4, None
            text: "Delete profile"
            background_color: [255, 255, 255, 0]
            color: [0, 0, 0, 1]

            on_press: root.deleteProfile()
        Button:
            size_hint: 0.4, None
            text: "Logout"
            background_color: [255, 255, 255, 0]
            color: [0, 0, 0, 1]

            on_press: root.logout()

