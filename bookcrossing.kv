                spacing: 10
                id: bookLayout
                cols: 1
                row_force_default: True
                row_default_height: 30
                size_hint_y: None

    MDBottomNavigation:
        size_hint: (1, None)
        panel_color: .2, .2, .2, 1
        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Python'
            icon: 'language-python'

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'C++'
            icon: 'language-cpp'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'JS'
            icon: 'language-javascript'

